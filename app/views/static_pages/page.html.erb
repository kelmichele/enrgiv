		h4 { text-transform: uppercase; color: $blue; font-size: 16px; font-weight: bold; margin-top: 0;position: relative; z-index: 0;
			&::after{content: ""; position: absolute; left:0px; bottom:-5px; width:35px; height: 2px; background-color: $blue;}
		}
	}

	img.icon { width:12%; @include center-block(); margin-bottom: 10px;}
	.cbp-caption-activeWrap {padding: 20px; background-color: $white; border-top: 1px solid #dfdfdf;
		p span {text-align: center;}
	}


	#solo {
		.cbp-caption-defaultWrap {  padding:15px 0 0px; background-color: transparent;text-align: center;
			h4::after{display: none;}
			h3{margin-bottom: 5px;}
			&::before {display: none;}
		}
		.cbp-caption {background-color: $white; padding: 10px 30px;}

		.cbp-caption-activeWrap {position: relative; padding: 0 25px 10px 0; border-top: 0; width:90%; text-align: center; @include center-block(); background-color: transparent;}
		.cbp-l-caption-body {padding-left: 0;}
	}

	.sidebar {width:30%; display: inline-block; float: right; background-color: $blue; padding: 40px 15px 0;
		.pricing, .add-ons {@include sec-default(); margin-bottom: 30px;}
	}
}

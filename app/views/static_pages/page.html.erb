	.cbp-item {@include sec-default();
		p span {color: $blue; font-weight: bold; @include sec-default();}
		.cbp-caption {  margin-bottom:20px;}

		.cbp-caption-defaultWrap { padding: 30px 0 15px 30px;background-color: $white; padding-left: 14%; position: relative; z-index: 0;
